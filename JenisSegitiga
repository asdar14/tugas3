//Tugas 2 - Soal-2 : Menentukan bentuk segitiga dengan panjang sisi-sisinya sebagai inputan

#include <iostream>

using namespace std;

int main()
{int A,B,C; char repeat;

 cout << "================================================";
 cout << "\nProgram untuk menetukan bentuk segitiga    ";
 cout << "\ndengan panjang sisi-sisinya sebagai inputan";
 cout << "\n================================================";

 do{
 
    cout << "\n\nMasukkan panjang sisi segitiga : ";
 
    cout << "\nMasukan Sisi Pertama :";
    cin >> A;
    cout << "\nMasukan Sisi Kedua :";
    cin >> B;
    cout << "\nMasukan Sisi Ketiga:";
    cin >> C;
 
    cout << "\nSisi pertama \t: " << A;
    cout << "\nSisi kedua \t: " << B;
    cout << "\nSisi ketiga \t: " << C;  

    if(A==B && B==C)
        cout << "\n\nSEGITIGA SAMA SISI\n" ;
    else if(A==B || A==C || B==C)
        cout << "\n\nSEGITIGA SAMA KAKI\n" ;
    else
        cout << "\n\nSEGITIGA SEMBARANG\n" ;

cout << "\n\nCoba lagi? (Y) : ";
cin >>repeat;
    }while(repeat=='y' || repeat=='Y');

return 0;
}

